<section class="todoapp">
	<header class="header">
		<h1>Leftovers</h1>
		<%= form_for(@leftover) do |f| %>
      		<%= f.text_field :name, :class => "new-todo" %>
      		<%= f.submit :style => "display: none" %>
    	<% end %>
	</header>

	<section class="main">
		<ul class="todo-list">
			<% @leftovers.each do |leftover| %>
			<li>
				<div class="view">
					<label><%= link_to leftover.name, leftover_path(leftover) %></label>
				</div>
			</li>
			<% end %>
		</ul>
	</section>

	<footer class="footer">
	</footer>
</section>